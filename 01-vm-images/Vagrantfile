# -*- mode: ruby -*-
# vi: set ft=ruby :

Vagrant.configure("2") do |config|
  config.vm.box = "ubuntu/jammy64"

  config.vm.define "vnc-server" do |srv|
    srv.vm.hostname = "vnc-server"
    srv.vm.network :private_network, ip: "192.168.100.10"
    srv.vm.provider "virtualbox" do |vb|
      vb.memory = 3072
      vb.cpus = 2
    end
    srv.vm.provision "shell", inline: <<-SHELL
      sudo apt-get update -y
      sudo apt-get install -y tigervnc-standalone-server tigervnc-common \
        python3 python3-pip curl git ufw
      id -u lab >/dev/null 2>&1 || sudo useradd -m -s /bin/bash lab
      echo "lab:lab123" | sudo chpasswd
      sudo ufw allow 5900:5910/tcp || true
    SHELL
  end

  config.vm.define "monitoring" do |mon|
    mon.vm.hostname = "monitoring"
    mon.vm.network :private_network, ip: "192.168.100.30"
    mon.vm.provider "virtualbox" do |vb|
      vb.memory = 4096
      vb.cpus = 2
    end
    mon.vm.provision "shell", inline: <<-SHELL
      sudo apt-get update -y
      sudo apt-get install -y docker.io docker-compose suricata zeek jq
      sudo systemctl enable --now docker || true
    SHELL
  end

  config.vm.define "attacker" do |atk|
    atk.vm.hostname = "attacker"
    atk.vm.network :private_network, ip: "192.168.100.20"
    atk.vm.provider "virtualbox" do |vb|
      vb.memory = 2048
      vb.cpus = 2
    end
    atk.vm.provision "shell", inline: <<-SHELL
      sudo apt-get update -y
      sudo apt-get install -y python3 python3-pip nmap net-tools tmux
      pip3 install --user requests pyyaml
    SHELL
  end
end
